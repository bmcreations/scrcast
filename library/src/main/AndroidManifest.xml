<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="dev.bmcreations.scrcast">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>

    <application
        android:requestLegacyExternalStorage="true"
        tools:targetApi="q">

        <service android:name="dev.bmcreations.scrcast.internal.recorder.service.RecorderService"
            android:foregroundServiceType="mediaProjection"
            tools:targetApi="q" />

        <receiver android:name="dev.bmcreations.scrcast.internal.recorder.receiver.RecordingNotificationReceiver" />

    </application>

</manifest>
